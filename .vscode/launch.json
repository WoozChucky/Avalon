    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build/Darwin/output",
            "MIMode": "lldb",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "C++ Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/AvalonPlattform/Game.cpp",
            "MIMode": "lldb",
            "processId": "${command:pickProcess}"
        }
    ]
}